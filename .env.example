# XMP 登录凭证配置
# 复制此文件为 .env 并填写你的实际账号信息

XMP_USERNAME=your_username_here
XMP_PASSWORD=your_password_here

# Google Cloud 配置
GCS_BUCKET_NAME=your_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# BigQuery 配置
BQ_PROJECT_ID=your_project_id
BQ_DATASET_ID=your_dataset_id

# ============ 飞书机器人配置 ============
LARK_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/xxxxxxxx
LARK_SECRET=your_secret_key

# ============ 规则引擎配置 ============
# 策略A: 止损信号阈值
RULE_STOP_LOSS_MIN_SPEND=30        # 最低消耗门槛 $30
RULE_STOP_LOSS_MAX_ROAS=0.10       # ROAS < 10% 触发止损

# 策略B: 扩量信号阈值
RULE_SCALE_UP_MIN_ROAS=0.40        # ROAS > 40%
RULE_SCALE_UP_MIN_SPEND=50         # 消耗 > $50
RULE_SCALE_UP_TARGET_CPI=2.0       # CPI < 目标值

# 策略C: 素材优化阈值
RULE_CREATIVE_CTR_DROP=0.20        # CTR 环比下降 20%
RULE_CREATIVE_MIN_CTR=0.01         # CTR < 1%
